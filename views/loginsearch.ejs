        <div class="container-fluid my-5">

            <ul>
                <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                    <div class="row">
                        <div class="col-12 text-center d-flex justify-content-center" style="padding-top: 30px;">
                            <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                
                                <li><%= error.message %></li>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div> 
                        </div>
                    </div>
                <% }) %> <% } %>
            </ul>
            
            <ul>
                <% if(messages.success_msg){%>
                    <div class="row">
                        <div class="col-12 text-center d-flex justify-content-center" style="padding-top: 30px;">
                            <div id="myalert" class="alert alert-success alert-dismissible fade show" role="alert">
                
                                <li><%= messages.success_msg %></li>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div> 
                        </div>
                    </div>
                <% } %>
            </ul>
            <ul>
                <% if (messages.error) { %>
                    <div class="row">
                        <div class="col-12 text-center d-flex justify-content-center" style="padding-top: 30px;">
                            <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                
                                <li><%= messages.error %></li>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div> 
                        </div>
                    </div>
                <% } %>
            </ul>

            <div class="row">
                <div class="col-12 mb-4" style="padding-top: 100px;">
                    <div class="card text-center border-dark" style="width: 18rem;">
                            <div class="box">
                                <form action="/users/search" method="POST">
                                    <h3 class="mb-4">Find Nearby Blood Banks</h3>
                                    <!-- State city pincode district-->
                                    <!-- <p>First letter in upper case</p> -->
                                    <input type="text" id="__city" name="__city" placeholder="Enter your City" required>
                                    <input type="submit" value="Search"/>
                                </form>
                            </div>
                    </div>
                </div>
            </div>
        </div>

