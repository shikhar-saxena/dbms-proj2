    <body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="52" tabindex="0">

        <header>
            <!--Navbar-->
            <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
                <div class="container-fluid">
                    
                    <a class="navbar-brand"  href="#" ><strong>Blood Bank</strong></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarToggler">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 nav-pills">
                            <li class="nav-item">
                            <a class="nav-link " href="#hero">Home</a>
                            </li>
                        </ul>
                    </div>
                     
                    <div class="info-box ">
                        <div class="title mr-0">
                            <a href='/users/search' class="theme-btn btn-style-two"><span class="fa fa-search"></span>&nbsp;Find Blood Bank</a>
                        </div>
                      </div> |
                    <div class="info-box ">
                        <div class="title ml-2">
                            <a href='/users/logout' class="theme-btn btn-style-two"><span class="fa fa-lock"></span>&nbsp;Logout</a>
                        </div>
                    </div> 
                </div>
            </nav><!--End Navbar-->
        </header>

        

        <!-- ======= Hero Section ======= -->
            <section id="hero" class="d-flex align-items-center">
                <div id="home"  class="container position-relative" data-aos="fade-up" data-aos-delay="500">
                <h1 >Welcome <%= user %></h1>
                <h2></h2>
                <!-- <a href="#about" class="btn-get-started scrollto">About Us</a> -->
                <ul>
                    <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                    
                                    <li><%= error.message %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% }) %> <% } %>
                </ul>
                
                <ul>
                    <% if(messages.success_msg){%>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-success alert-dismissible fade show" role="alert">
                    
                                    <li><%= messages.success_msg %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% } %>
                </ul>
                <ul>
                    <% if (messages.error) { %>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                    
                                    <li><%= messages.error %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% } %>
                </ul>
                </div>
            </section><!-- End Hero -->

            <section class="vision">
                <div class="container my-5" >
                    <div id="visiond" class="section-title" data-aos="fade-up">
                        <p style="font-size:40px">Importance of Donation</p>
                    </div>
                    <div class="row">
                        <div class="vision col-12">
                            <p>
                                Blood is needed regularly for patients with diseases such as thalassemia and hemophilia, and also for the treatment of injuries after an accident, major surgeries, anemia, etc.

                            </p>
                            <p>
                                Did you know that people who donate blood are 88% less likely to suffer a heart attack and 33% less likely to acquire any type of cardiovascular disease.

                                When you donate blood, it removes 225 to 250 milligrams of iron from your body, hence reducing the risk of heart disease.

                                Blood Center performs numerous tests on the donated blood. Therefore regular blood donation helps in sheilding you from serious diseases.
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <section id="recentdonors" class="recentdonars">
                <div class="container my-5" >
                    <div id="visiond" class="section-title" data-aos="fade-up">
                        <p style="font-size:40px">Recent Donors</p>
                    </div>
                    <div class="row">
                      <% for(var i = 0; i < results.length; i++) { %>
                        <div class="col-lg-4 mb-4">
                            <div class="card text-center border-warning" style="width: 18rem;">
                                <div class="card-body">
                                  <h5 class="card-title"><%= title %></h5>
                                  <p class="card-text">
                                    <table class="table">
                                        <tbody>
                                          <tr>
                                            <td>Name:</td>
                                            <td><%= results[i].name %></td>
                                          </tr>
                                          <tr>
                                            <td>Email:</td>
                                            <td><%= results[i].email %></td>
                                          </tr>
                                          <tr>
                                            <td>Phone:</td>
                                            <td><%= results[i].mobile %></td>
                                          </tr>
                                          <tr>
                                            <td>Address:</td>
                                            <td><%= results[i].address %></td>
                                          </tr>
                                          <tr>
                                            <td>Pincode:</td>
                                            <td><%= results[i].pincode %></td>
                                          </tr>
                                          <tr>
                                            <td>Blood:</td>
                                            <td><%= results[i].bloodgroup %></td>
                                          </tr>
                                        </tbody>
                                    </table>
                                  </p>
                                  <% if( id == results[i].id) { %>
                                    <form method="POST" action="/users/donor?_method=DELETE">
                                      <button type="submit" class="btn btn-primary">Delete donation request</button>
                                    </form>
                                  <% } %>
                                </div>
                            </div>
                        </div>
                      <% } %>
                    </div>
                </div>
            </section>
            <section class='vision'>
                    <div class="row text-center">
                        <!-- Start Header Text -->
                        <div class="col-12 text-white" style="padding-top: 60px;
                        padding-bottom: 50px;">
                            <h1><strong>Donate Blood</strong></h1>
                            
                            <br />
                        </div>
                        <div class="col-md-6 col-sm-6  text-white">
                            <a href="/users/donor">
                                <div class="rounded-icons bg-orange-ope">
                                    <i class="line-font-lg fa  fa-tint"></i>
                                    <h3>Donate Blood</h3>
                                </div>
                            </a>
                        </div>
                        
                        <div class="col-md-6 col-sm-6 text-white">
                            <a href="/users/search">
                                <div class="rounded-icons bg-white-ope">
                                <i class="line-font-lg  fa fa-user"></i>
                                <h3>Find Blood Banks</h3>
                                </div>
                                </a>
                        </div>
                        
                    </div>
  
                </div>
            </section>

            <section class="fullwidth-section-one">
