                                    <div class="pay-block col-md-3 col-sm-3 col-xs-6">

                                        

                                        <div class="icon-box-rounded">  O+<br />
                                            <span><%= storeStatus['O+'] %></span></div>
                                    
                                    </div>
                                        
                                        
                                </div>
                            </div>
                        </div>
                    </div>
    
                </div>
            </section>
            



       

      

       

