        </header>
  
          
            <section id="info" class="info">
                <div class="container my-5" >
                  <ul>
                    <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                    
                                    <li><%= error.message %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% }) %> <% } %>
                </ul>
                
                <ul>
                    <% if(messages.success_msg){%>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-success alert-dismissible fade show" role="alert">
                    
                                    <li><%= messages.success_msg %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% } %>
                </ul>
                <ul>
                    <% if (messages.error) { %>
                        <div class="row">
                            <div class="col-12 text-center d-flex justify-content-center">
                                <div id="myalert" class="alert alert-warning alert-dismissible fade show" role="alert">
                    
                                    <li><%= messages.error %></li>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                            </div>
                        </div>
                    <% } %>
                </ul>
                    <div class="row">
                        <div class="col-12 d-flex justify-start">
                            <h3>Welcome <%= user %> </h3>
                        </div>
                    </div>
                    <div id="visiond" class="section-title" data-aos="fade-up" style="padding-top: 40px;">
                        <p style="font-size:40px">Your Information</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <table class="table" style="padding-top: 40px;">
                                <tbody>
                                  <tr>
                                    <th scope="row">1</th>
                                    <td>Name:</td>
                                    <td><%= user %></td>
                                    <td><span class="fa fa-pencil-square-o"></span>&nbsp;<a href="">Modify</a></td>
                                  </tr>
                                  <tr>
                                    <th scope="row">2</th>
                                    <td>Email:</td>
                                    <td><%= email %></td>
